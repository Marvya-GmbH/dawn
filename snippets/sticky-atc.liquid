<div id="sticky-atc-bar" class="sticky-atc-bar">
    <div class="container page-width">
      <div class="product-details">
        <img src="{{ product.featured_image | img_url: '100x100' }}" alt="{{ product.title }}" />
        <div class="product-info">
          <span class="vendor_title">{{ product.vendor }}</span>
          <h2 class="sticky_product_title">{{ product.title }}</h2>
          <div
          class="rating"
          role="img"
          aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: card_product.metafields.reviews.rating.value, rating_max: card_product.metafields.reviews.rating.value.scale_max }}"
        >
          {% render 'review-stars' %}
          <span class="review-count">(89)</span>
        </div>
        </div>
      </div>
      <div class="wrap-atc">
      <div class="pricing">
        <span class="compare-price">{{ product.compare_at_price | money }}</span>
        <span class="current-price">{{ product.price | money }}</span>
      </div>
      <button class="add-to-cart" onclick="document.querySelector('form[action=\'/cart/add\']').submit();">
        {{ 'products.product.add_to_cart' | t }}
      </button>
      </div>
    </div>
</div>
  